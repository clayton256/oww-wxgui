CC = gcc

PROGRAM = Oww

OBJECTS = wxgui.o #oww_trx.o devices.o client.o progstate.o

_VERSIONSTR="0.85.0-1"

# implementation

.SUFFIXES:	.o .cpp .c

.c.o :
	$(CC) -c -D__WXGUI__ -DNOGUI -o $@ ../oww-0.86.0/src/$<

.cpp.o :
	$(CC) -c `wx-config --cflags` -D__WXGUI__ -DNOGUI -DVERSIONSTR=\"$(_VERSIONSTR)\" -o $@ $<

all:    $(PROGRAM)

$(PROGRAM):	$(OBJECTS)
	$(CC) -o $(PROGRAM) $(OBJECTS) `wx-config --libs`

clean: 
	rm -f *.o $(PROGRAM)
